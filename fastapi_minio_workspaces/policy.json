{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::*"
      ]
    },
    {
      "Action": [
        "s3:ListBucket"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::fastapi-minio-workspaces"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": "public",
          "s3:delimiter": "/"
        }
      }
    },
    {
      "Action": [
        "s3:ListBucket"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::fastapi-minio-workspaces"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": "public/*"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::fastapi-minio-workspaces/public/*"
      ]
    },
    {
      "Action": [
        "s3:ListBucket"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::fastapi-minio-workspaces"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": "private/other",
          "s3:delimiter": "/"
        }
      }
    },
    {
      "Action": [
        "s3:ListBucket"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::fastapi-minio-workspaces"
      ],
      "Condition": {
        "StringLike": {
          "s3:prefix": "private/other/*"
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::fastapi-minio-workspaces/private/other/*"
      ]
    }
  ]
}
